<idea-plugin>
    <id>com.github.madwareru.intellijronremix</id>
    <name>intellij-ron-remix</name>
    <vendor>madwareru</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <fileType
                name="RON file"
                implementationClass="com.github.madwareru.intellijronremix.language.RONFileType"
                fieldName="INSTANCE"
                language="RON"
                extensions="ron"
        />
        <lang.parserDefinition
                language="RON"
                implementationClass="com.github.madwareru.intellijronremix.language.RONParserDefinition"
        />
        <lang.syntaxHighlighter
                language="RON"
                implementationClass="com.github.madwareru.intellijronremix.language.RONSyntaxHighlighter"
        />
        <colorSettingsPage
                implementation="com.github.madwareru.intellijronremix.language.RONColorSettingsPage"
        />
        <lang.commenter
                language="RON"
                implementationClass="com.github.madwareru.intellijronremix.language.RONCommenter"
        />
        <lang.braceMatcher
                language="RON"
                implementationClass="com.github.madwareru.intellijronremix.language.RONBraceMatcher"
        />

    </extensions>
    <actions>
        <action id="com.github.madwareru.intellijronremix.language.RONCreateFile"
                class="com.github.madwareru.intellijronremix.language.RONCreateFile"
                text="RON File"
                description="Create new RON file">
            <add-to-group group-id="NewGroup" anchor="after" relative-to-action="NewFile"/>
        </action>
    </actions>
</idea-plugin>
